@model IEnumerable<AquariumForum.Models.Discussion>

<h1>Discussions List</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Image Thumbnail</th>
            <th>CreateDate</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Content)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageFilename))
                    {
                        <img src="~/images/@item.ImageFilename" width="50" height="50" />
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DiscussionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DiscussionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DiscussionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
